{
  "name": "hardened-js",
  "version": "0.2.0",
  "description": "Small utilities to freeze/harden built-ins in JS environments",
  "main": "dist/node/node.js",
  "scripts": {
    "build": "npm run build:node && npm run build:browser",
    "build:node": "esbuild src/entry.node.ts --bundle --platform=node --format=cjs --outfile=dist/hardenedjs.node.js --sourcemap",
    "build:browser": "esbuild src/entry.browser.ts --bundle --platform=browser --format=iife --global-name=HardenedJS --outfile=dist/hardenedjs.browser.js --sourcemap",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "start": "node dist/hardenedjs.node.js",
    "test:e2e": "playwright test",
    "test:e2e:ci": "playwright test --project=chromium --reporter=list"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MattiasFestin/hardened-js"
  },
  "keywords": [
    "security",
    "freeze",
    "harden",
    "javascript",
    "node"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.6.0",
    "eslint": "^8.50.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.6.0",
    "vitest": "^1.0.0",
    "@playwright/test": "^1.40.0",
    "serve-handler": "^6.1.3"
  },
  
  "devDependenciesMeta": {
    "esbuild": {
      "optional": true
    }
  },
  "browser": "dist/hardenedjs.browser.js",
  "dependencies": {
    "esbuild": "^0.25.11"
  }
}